<h2>Inscription</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <div class="input-group">
      <span for="user_email" class="input-group-addon"><i class="fa fa-at"></i></span>
      <input autofocus="autofocus" class="form-control" type="email" value="" name="user[email]" id="user_email" placeholder="Email" aria-describedby="basic-addon">
    </div>
  </div><br />

  <div class="field">
    <div class="input-group">
      <span for="user_password" class="input-group-addon"><i class="fa fa-unlock"></i></span>
      <input autocomplete="off" class="form-control" type="password" name="user[password]" id="user_password" placeholder="Mot de passe" aria-describedby="basic-addon">
    </div>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div><br />

  <div class="field">
    <div class="input-group">
      <span for="password_confirmation" class="input-group-addon"><i class="fa fa-unlock"></i></span>
      <input autocomplete="off" class="form-control" type="password" name="user[password_confirmation]" id="user_password" placeholder="Confirmation mot de passe" aria-describedby="basic-addon">
    </div>
  </div><br />

  <div class="actions">
    <button type="submit" name="commit" value="Log in" data-disable-with="Log in" class="btn btn-xs btn-primary pull-left"><i class="fa fa-check"></i> Valider</button>
  </div>
<% end %>

<% render "devise/shared/links" %>
